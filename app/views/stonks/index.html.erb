<p style="color: green"><%= notice %></p>

<h1>Stonks</h1>
<div class="container">
  <div class="row">
    <div class="col">
      1 of 3
    </div>
    <div class="col-3">
      1 of 2 (wider)
    </div>
  </div>

</div>
<table class="table table-bordered">
  <thead class="table-dark">
  <tr>
    <th>Stock Name(Abbr.)</th>
    <th>Stock Type</th>
    <th>Current Price</th>
    <th>Buy-in Price</th>
    <th>Money gained/lost</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
    <% @stonks.each do |stonk| %>
      <tr>
        <td>
          <%= link_to stonk.stock_name + ' (' + stonk.stock_abbreviation + ')', stonk %>


        </td>

        <td><%= stonk.stock_type %></td>
        <td>$<%= stonk.current_price %></td>
        <td>$<%= stonk.bought_price %></td>
        <td>$<%= stonk.current_price - stonk.bought_price %></td>





        <td>
          <%= link_to 'Remove Stock', stonk, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add stock', new_stonk_path, class:"btn btn-secondary" %>